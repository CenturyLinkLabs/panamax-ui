.select-remote-target
  %ul
    - @deployment_targets.each do |target|
      %li
        %dl
          %dt=target.name
          %dd
            Endpoint:
            = target.endpoint_url
        = link_to 'Deploy to Target', new_deployment_target_deployment_path(target, template_id: @template.id), class: 'button-positive'

  = link_to 'Add a New Remote Deployment Target', deployment_targets_path, class: 'button-add-positive'
