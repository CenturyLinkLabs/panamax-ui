- content_for(:body_id, 'manage_flow')

:ruby
  crumbs = breadcrumbs_for(
    link_to("Manage", applications_path),
    @app.name
  )
= render '/shared/breadcrumbs', breadcrumbs: crumbs

%section.application-services
  %header
    %h3
      Application Services
    %nav
      %a.list.selected= ''
      %a.link= ''
  .categories
    - @app.categorized_services.each do |group, services|
      .category-panel
        %header
          = group.name
        - unless services.empty?
          %ul.services
            - services.each do |service|
              = render 'application_service_row', :app_id => @app.id,
                                                  :name => service.name,
                                                  :service_id => service.id,
                                                  :status => service.status,
                                                  :icon => service.icon
        = link_to 'Add a Service', '#', class: 'button-positive add-service', title: 'add', data: {:category => group.id}

= render 'services/add_service'

.archetype
  = render 'application_service_row', :app_id => @app.id,
                                      :name => 'REPLACE',
                                      :service_id => 'REPLACE',
                                      :status => nil,
                                      :icon => nil
