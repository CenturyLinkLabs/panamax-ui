- content_for(:body_id, 'manage_flow')

:ruby
  crumbs = breadcrumbs_for(
    link_to("Manage", applications_path),
    @app.name
  )
= render '/shared/breadcrumbs', breadcrumbs: crumbs

%section.application-services
  %header
    %h3
      Application Services
    %nav
      %a.list.selected= ''
      %a.link= ''
  .categories
    - @app.categorized_services.each do |group, services|
      .category-panel
        %header
          = group
        %ul.services
          - services.each do |service|
            %li
              .service-icon
              %span
                = service.name
              .actions
                = link_to 'edit', application_service_path(@app.to_param, service.id), class: 'edit-action', title: 'details'
                %a.delete-action
        %button.button-positive
          Add a Service
