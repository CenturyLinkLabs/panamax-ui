- content_for(:body_id, 'manage_flow')

:ruby
  crumbs = breadcrumbs_for(
    link_to("Manage", applications_path),
    @app.name
  )
= render '/shared/breadcrumbs', breadcrumbs: crumbs

= render 'shared/notifications'

%section.deployment-details
  %span.deployment-env
    Deployed to: CoreOS Local
  - unless @app.host_ports.blank?
    - @app.host_ports.each do |service_name, ports|
      %span.service-url
        = "#{service_name} URL: "
        - ports.each do |port|
          %a{href: "http://127.0.0.1:#{port}/"}<>
            = "127.0.0.1:#{port}"

%section.application-services
  %header
    %h3
      Application Services
    %nav
      %a.list.selected= ''
      %a.relationship= ''
  .views
    .categories
      - @app.categorized_services.each do |group, services|
        .category-panel
          %header
            = group.name
          - unless services.empty?
            %ul.services
              - services.each do |service|
                = render 'application_service_row', :app_id => @app.id,
                                                    :name => service.name,
                                                    :service_id => service.id,
                                                    :status => service.status,
                                                    :icon => service.icon
          = link_to 'Add a Service', '#', class: 'button-positive add-service', title: 'add', data: {:category => group.id}
    .relationships
      - @app.ordered_services.each do |service|
        .relationship-panel
          %header
            = service.name
          - unless service.links.empty?
            %ul.links
              - service.links.each do |link|
                %li
                  = link.service_name

= render 'services/add_service'

.archetype
  = render 'application_service_row', :app_id => @app.id,
                                      :name => 'REPLACE',
                                      :service_id => 'REPLACE',
                                      :status => nil,
                                      :icon => nil
