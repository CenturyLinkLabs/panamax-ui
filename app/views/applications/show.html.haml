- content_for(:body_id, 'manage_flow')

%h1= @app.name
%section.application-services
  %header
    %h3
      Application Services
    %nav
      %a.list.selected= ''
      %a.link= ''
  .categories
    - @app.service_categories.each do |cat|
      .category-panel
        %header
          = cat['name']
        - unless @app.categorized_services.empty?
          %ul.services
            - @app.categorized_services[cat['name']].each do |service|
              %li
                .service-icon
                %span
                  = service['name']
                .actions
                  .delete
        %button.button-positive
          Add a Service
