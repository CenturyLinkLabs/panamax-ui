- content_for(:body_id, 'manage_flow')

%h1 Manage
%header
  %h3 My Applications
%section.applications
  - @apps.each do |app|
    %div.application
      .name
        = link_to app.name, application_path(app.id)
        %b= app.services.length
        %span= app.service_count_label
      .actions
        = render 'application_button_menu', app: app

.add-button
  = link_to 'Create a New Application', root_path, class: 'button-positive'
