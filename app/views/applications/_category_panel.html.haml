.category-panel
  %header
    %span.title
      = presenter.name
    .actions
      %a{href: "/categories/#{presenter.id}", class: 'edit-action'}
      %a{href: "/categories/#{presenter.id}", class: 'delete-action'}
  - unless presenter.services.empty?
    %ul.services
      - presenter.services.each do |service|
        = render 'application_service_row', {presenter: ServiceRowPresenter.new(service)}
  = link_to 'Add a Service', '#', class: 'button-positive add-service', title: 'add', data: {:category => presenter.id}