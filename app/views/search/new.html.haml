- content_for(:body_id, 'search_flow')

%script#template_result_template{type: 'text/x-handlebars-template'}
  = render 'template_row', {presenter: JsonTemplatePresenter.new}
%script#remote_image_result_template{type: 'text/x-handlebars-template'}
  = render 'image_row', {presenter: JsonImagePresenter.new, remote: true}
%script#local_image_result_template{type: 'text/x-handlebars-template'}
  = render 'image_row', {presenter: JsonImagePresenter.new}
%script#loading_row_template{type: 'text/x-handlebars-template'}
  = render 'loading_row'
%script#no_results_row_template{type: 'text/x-handlebars-template'}
  = render 'no_results_row'

.filterable-list
  %h1 Search Templates &amp; Images
  = form_for @search_form, url: search_path, method: :get, html: {class: 'search-form'} do |f|
    = f.text_field :query, placeholder: 'enter your command / query', accesskey: 's'
    = f.button 'Search', class: 'button-primary'

  %section.example-searches
    %h3
      Or, try one of these example searches:
    %a.example.wordpress{data: {query: 'wordpress'}} Wordpress
    %a.example.drupal{data: {query: 'drupal'}} Drupal
    %a.example.rails{data: {query: 'rails'}} Rails
    %a.example.ubuntu{data: {query: 'ubuntu'}} Ubuntu

  %h3.search-title Templates
  .template-results

  %h3.search-title Images
  .local-image-results
  .remote-image-results
