- remote ||= false
.search-result-item.image-result
  .badge= presenter.status_label
  .authority
    %div{:class => presenter.recommended_class}
  .basic-info
    %h3
      - if remote
        = link_to presenter.title, presenter.docker_index_url, target: '_blank', title: 'View details on the Docker Index'
      - else
        = presenter.title
    %p= presenter.short_description
  .actions
    = form_tag application_services_path(@app.id) do
      = hidden_field_tag 'application[name]', @app.name
      = hidden_field_tag 'application[category]', 'null'
      = hidden_field_tag 'name', presenter.title
      = hidden_field_tag 'from', presenter.title
      = button_tag 'Add to App', class: 'button-positive'
  - if remote
    .community-data
      = link_to presenter.docker_index_url + "/stars/", target: '_blank' do
        .star-count=presenter.star_count
