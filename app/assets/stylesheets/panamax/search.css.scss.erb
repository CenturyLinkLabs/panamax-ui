@import 'ctl_base_ui/colors';
@import 'ctl_base_ui/mixins';
@import 'ctl_base_ui/icons';
@import 'panamax/buttons';

.search-form {
  margin-bottom: 20px;

  input.query-field {
    @include border-box;
    width: 745px;
    margin-bottom: 5px;
  }

  button.button-primary {
    @include border-box;
    @extend .icon-magnifying-glass-for-button;
    float: right;
    width: 200px;
  }
}

.example-searches {
  padding: 1em 0;
  overflow: auto;

  h3 {
    color: $dark_grey;
    padding-bottom: 16px;
    border-bottom: 1px solid $medium_grey;
    margin-bottom: 16px;
  }

  a.example {
    display: block;
    float: left;
    position: relative;
    width: 142px;
    height: 80px;
    font-size: 0.8em;
    line-height: 80px;
    color: $dark_grey;
    background-color: $light_grey;
    padding-left: 80px;
    border-radius: 3px;
    margin: 0 24px 24px 0;

    &:nth-of-type(4) {
      margin-right: 0;
    }

    &:before {
      content: '';
      position: absolute;
      left: 20px;
      top: 20px;
      width: 50px;
      height: 40px;
      background-repeat: no-repeat;
      background-position: left top;
      border-right: 1px solid $medium_grey;
    }

    &:hover {
      text-decoration: underline;
      color: white;
      background-color: $sky_blue;

      &:before {
        background-position: left bottom;
        border-right: 1px solid white;
      }
    }
  }

  a.example.wordpress:before {
    background-image: asset-url('service_icons/icon_service_wordpress.png');
  }

  a.example.drupal:before {
    background-image: asset-url('service_icons/icon_service_drupal.png');
  }

  a.example.rails:before {
    background-image: asset-url('service_icons/icon_service_rails.png');
  }

  a.example.ubuntu:before {
    background-image: asset-url('service_icons/icon_service_ubuntu.png');
  }
}

.search-result-item {
  background-color: $light_grey;
  border: darken( $light_grey, 10% ) 1px solid;
  margin: 1em 0;
  overflow: auto;

  .badge {
    float: left;
    width: 110px;
    height: 110px;
    text-align: center;
    line-height: 110px;
    background-color: $grey;
    color: $white;
    font-size: 0.9em;
  }

  .authority {
    float: left;
    width: 20px;
    padding-left: 10px;

    .recommended {
      @include icon-light-green;
      @extend .icon-star-large;
    }
    .not-recommended {
      @extend .icon-star-large;
    }
    div {
        margin: 10px 0;
    }
  }

  .basic-info {
    float: left;
    margin: 10px 20px 10px 10px;
    padding: 0 20px;
    @include border-box;
    width: 430px;
    height: 90px;
    overflow: auto;
    border-left: darken( $light_grey, 10% ) 1px solid;

    h3 {
      margin-bottom: 0;
    }

    p {
      padding-bottom: 0.5em;
      font-size: 0.8em;
      line-height: 1.2;
    }
  }

  .badge {
    height: 110px;
    width: 110px;
  }

  .actions {
    float: right;
    min-height: 90px;
    border-left: darken( $light_grey, 10% ) 1px solid;
    padding: 0 20px;
    margin: 10px 0 0;

    label {
      font-size: 12px;
    }

    .chosen-container {
      width: 132px !important;
      .chosen-results {
        max-height: 55px; /* for now */
      }
    }

    .button-positive {
      @include border-box;
      padding-right: 30px;
      width: 165px;
      position: relative;
      margin: 10px 0 0;
      display: block;

      &:before {
        content: '';
        position: absolute;
        right: 10px;
        top: 14px;
        display: block;
        @extend .icon-thick-arrow-right;
        @include icon-white;
        width: 10px;
        height: 10px;
      }

      &[disabled],
      &[disabled]:hover {
        background-color: darken( $lime, 30% );
        color: $light_grey;
      }
    }

    select {
      display: block;
    }
  }
}

.search-result-item.image-result {
  .community-data {
    @extend .actions;

    a { text-decoration: none }

    .star-count {
      @include border-radius(3px);
      @include border-box;
      width: 80px;
      height: 40px;
      padding: 13px 0 0 40px;
      overflow: hidden;
      background-color: darken( $light_grey, 10% );
      position: relative;
      font-size: 0.9em;

      &:before {
        @extend .icon-star-large;
        content: '';
        display: block;
        position: absolute;
        left: 10px;
        top: 10px;
      }

      &:hover {
        background-color: $grey;
        color: $white;

        &:before {
          @include icon-white;
        }
      }
    }
  }
}

.search-result-item.template-result {
  .community-data {
    @extend .actions;
    .image-count {
      @include border-radius(45px);
      @include border-box;
      background-color: darken($light_grey, 10%);
      width: 90px;
      height: 90px;
      padding-top: 20px;
      text-align: center;
      font-size: 13px;

      em {
        display: block;
        font-size: 36px;
        font-weight: bold;
      }
    }
  }

  .badge {
    line-height: 1;

    img {
      @include border-box;
      @include border-radius(30px);
      margin: 18px 0 5px;
      width: 60px;
      height: 60px;
      padding: 10px;
      background-color: $sky_blue;
    }

    background-color: $dark_blue;
  }
}

.search-result-item.in-progress {
  .basic-info p {
    margin-top: 35px;
  }

  .badge {
    background: url(<%= asset_data_uri 'loading_blocks.gif' %>) no-repeat center center;
  }
}

.search-result-item.no-results {
  .basic-info {
    padding-top: 30px;
    min-height: 90px;
    width: 700px;
    @include border-box;
  }

  .badge {
    background: asset-url('frowny_face.png') no-repeat center center;
  }
}

.search-title {
  display: none;
}

.archetype {
  display: none;
}

// Search Form in modal window
#manage_flow .ui-dialog {
  input.query-field {
    width: 600px;
  }

  .filterable-list {
    .basic-info {
      width: 325px;
    }
  }

  .search-result-item.image-result {
    .community-data {
      padding: 0 15px;
    }
  }

  .search-result-item.template-result {
    .community-data {
      padding: 0 15px;
    }
  }
}

.chosen-container-active.chosen-with-drop .chosen-single {
  box-shadow: 1px 0 0px $white;
}
