@import 'ctl_base_ui/colors';
@import 'ctl_base_ui/mixins';
@import 'ctl_base_ui/icons';
@import 'panamax/buttons';

body#search_flow main {
  overflow: auto;
}

.template-details-dialog {
  position: absolute;
  top: 50px;

  #post-run-html {
    margin: 0;
  }

  .template-images {
    ul {
      li {
        margin-bottom: 12px;
        padding-bottom: 12px;
        &:not(:last-child) {
          border-bottom: 1px solid $light_grey;
        }

        .template-image-icon {
          display: inline-block;
          background-color: $light_grey;
          width: 40px;
          height: 40px;
          margin-right: 6px;
          border-radius: 4px;
          img {
            margin: 10px 0 0 10px;
            width: 20px;
            height: 20px;
          }
        }

        .template-image-external {
          display: inline-block;
          border-left: 1px solid $medium_grey;
          margin-left: 12px;
          padding-left: 12px;
          line-height: 27px;
        }
      }
    }
  }
}

.search-form {
  margin-bottom: 20px;

  input.query-field {
    @include border-box;
    width: 745px;
    margin-bottom: 5px;
  }

  button.button-primary {
    @include border-box;
    @extend .icon-magnifying-glass-for-button;
    float: right;
    width: 200px;
  }
}

.example-searches {
  padding: 1em 0;
  overflow: auto;

  h3 {
    color: $dark_grey;
    padding-bottom: 16px;
    border-bottom: 1px solid $medium_grey;
    margin-bottom: 16px;
  }

  a.example {
    display: block;
    float: left;
    position: relative;
    width: 142px;
    height: 80px;
    font-size: 0.8em;
    line-height: 80px;
    color: $dark_grey;
    background-color: $light_grey;
    padding-left: 80px;
    border-radius: 3px;
    margin: 0 24px 24px 0;

    &:nth-of-type(4) {
      margin-right: 0;
    }

    &:before {
      content: '';
      position: absolute;
      left: 20px;
      top: 20px;
      width: 50px;
      height: 40px;
      background-repeat: no-repeat;
      background-position: left top;
      border-right: 1px solid $medium_grey;
    }

    &:hover {
      text-decoration: underline;
      color: white;
      background-color: $blue_grey;

      &:before {
        background-position: left bottom;
        border-right: 1px solid white;
      }
    }
  }

  a.example.buildpack:before {
    background-image: asset-url('service_icons/icon_service_buildpack.png');
  }

  a.example.wordpress:before {
    background-image: asset-url('service_icons/icon_service_wordpress.png');
  }

  a.example.drupal:before {
    background-image: asset-url('service_icons/icon_service_drupal.png');
  }

  a.example.rails:before {
    background-image: asset-url('service_icons/icon_service_rails.png');
  }
}

.search-result-item {
  background-color: $light_grey;
  border: darken( $light_grey, 10% ) 1px solid;
  margin: 1em 0;
  overflow: auto;

  .badge {
    float: left;
    width: 110px;
    height: 110px;
    text-align: center;
    line-height: 110px;
    background-color: $grey;
    color: $white;
    font-size: 0.9em;
  }

  .badge.local {
    background-color: $blue_grey
  }

  .badge.official {
    background-color: $blue_grey_dark;
  }

  .authority {
    float: left;
    width: 20px;
    padding-left: 10px;

    div {
        margin: 10px 0;
    }
  }

  .basic-info {
    float: left;
    margin: 10px 20px 10px 0px;
    padding: 0 20px;
    @include border-box;
    width: 440px;
    height: 90px;
    overflow: auto;

    h3 {
      margin-bottom: 0;
      color: $dark_grey;
    }

    p {
      padding-bottom: 0.5em;
      font-size: 0.8em;
      line-height: 1.2;
    }
  }

  .actions {
    float: right;
    min-height: 90px;
    border-left: darken( $light_grey, 10% ) 1px solid;
    padding: 0 20px;
    margin: 10px 0 0;

    label {
      font-size: 12px;
    }

    .chosen-container {
      width: 132px !important;
      .chosen-results {
        max-height: 55px; /* for now */
      }
    }

    .button-positive {
      @include border-box;
      padding-right: 30px;
      width: 165px;
      position: relative;
      margin: 10px 0 0;
      display: block;

      &:before {
        content: '';
        position: absolute;
        right: 10px;
        top: 14px;
        display: block;
        @extend .icon-thick-arrow-right;
        @include icon-white;
        width: 10px;
        height: 10px;
      }

      &[disabled],
      &[disabled]:hover {
        background-color: darken( $orange, 15% );
        color: $light_grey;
      }
    }

    select {
      display: block;
    }
  }
}

.search-result-item.image-result {
  .community-data {
    @extend .actions;

    a { text-decoration: none }

    .star-count {
      @include border-radius(3px);
      @include border-box;
      width: 80px;
      height: 40px;
      padding: 13px 0 0 40px;
      overflow: hidden;
      background-color: darken( $light_grey, 10% );
      position: relative;
      font-size: 0.9em;

      &:before {
        @extend .icon-star-large;
        content: '';
        display: block;
        position: absolute;
        left: 10px;
        top: 10px;
      }

      &:hover {
        background-color: $grey;
        color: $white;

        &:before {
          @include icon-white;
        }
      }
    }
  }
}

.search-result-item.template-result {
  .community-data {
    @extend .actions;
    .image-count {
      @include border-radius(45px);
      @include border-box;
      background-color: darken($light_grey, 10%);
      width: 90px;
      height: 90px;
      padding-top: 20px;
      text-align: center;
      font-size: 13px;

      em {
        display: block;
        font-size: 36px;
        font-weight: bold;
        font-style: normal;
      }
    }
  }

  .badge {
    line-height: 1;

    img {
      @include border-box;
      @include border-radius(30px);
      margin: 18px 0 5px;
      width: 60px;
      height: 60px;
      padding: 10px;
      background-color: $white;
    }

    background-color: $blue_grey_dark;
  }
}

.search-result-item.in-progress {
  .basic-info p {
    margin-top: 35px;
  }

  .badge {
    background: url(<%= asset_data_uri 'loading_blocks.gif' %>) no-repeat center center;
  }
}

.search-result-item.no-results {
  .basic-info {
    padding-top: 30px;
    min-height: 90px;
    width: 700px;
    @include border-box;
  }

  .badge {
    background: asset-url('frowny_face.png') no-repeat center center;
  }
}

.search-result-item.source-repo-blurb {
  background-color: $blue_grey;
  .basic-info {
    padding-left: 5px;
    padding-top: 10px;
    height: 35px;
    width: 600px;
    @include border-box;
    color: $white;
  }

  .badge {
    width: 50px;
    height: 50px;
    background-color: $white;
    background: asset-url('icon_template_default_small.png') no-repeat center center;
  }

  .link-actions {
    font-size: 12px;
    float: right;
    height: 25px;
    padding: 10px 40px 0 20px;
    margin: 10px 10px 10px 0px;
    display: block;
    position: relative;

    &:after {
      content: '';
      position: absolute;
      right: 20px;
      top: 12px;
      display: block;
      @extend .icon-thick-arrow-right;
      @include icon-white;
      width: 10px;
      height: 10px;
    }

    a {
      color: $grey;

      &:hover {
        text-decoration: none;
      }
    }

  }
}

.search-title {
  display: none;
}

.archetype {
  display: none;
}

// Search Form in modal window
#manage_flow .ui-dialog {
  input.query-field {
    width: 600px;
  }

  .filterable-list {
    .basic-info {
      width: 325px;
    }
  }

  .search-result-item.image-result {
    .community-data {
      padding: 0 15px;
    }
  }

  .search-result-item.template-result {
    .community-data {
      padding: 0 15px;
    }
  }
}

.chosen-container-active.chosen-with-drop .chosen-single {
  box-shadow: 1px 0 0px $white;
}

.blog-feed {
  float: left;
  width: 48%;

  h3 {
    padding-bottom: 16px;
    border-bottom: 1px solid $medium_grey;
  }

  a.blog-link {
    @extend .button-secondary;
    padding: 1em;
    margin: 20px 0 0 0;
    font-size: 0.8em;
    font-weight: normal;
    text-decoration: none;
  }

  .blog-feed-items {

    li {
      padding: 0 0 20px 0;
      border-bottom: 1px solid $light_grey;
      margin: 20px 0 0 0;
      font-size: 1.1em;

      .timestamp {
        display: inline-block;
        width: 34%;
        margin-right: 2%;
        padding: 0;
        vertical-align: top;
        color: $medium_grey;
        font-weight: 200;
      }

      a {
        display: inline-block;
        width: 61%;
        padding: 0;
        margin: 0;
        font-weight: bold;
        color: $blue_grey;
        text-decoration: none;

        &:hover {
          color: $blue_grey_dark;
          text-decoration: underline;
        }
      }
    }
  }
}

.contest-banner {
  width: 48%;
  height: 425px;
  float: right;
  margin-bottom: 50px;

  .inner {
    background: asset_url('contest/panamax_contest_bg_big.jpg') bottom right no-repeat;
    height: 100%;
    overflow: auto;
    position: relative;

    .info,
    .action {
      padding: 20px;
      width: 100%;
      @include border-box;
    }

    .info {
      height: 330px;
      background-color: rgba(4, 19, 30, .75);
      float: left;
      padding-right: 40px;
      .white-logo {
        background: asset_url('contest/panamax-logo-white.png');
        display: block;
        width: 148px;
        height: 20px;
      }
    }

    .action {
      height: 95px;
      background-color: rgba(60, 82, 94, .75);
      float: right;

      a {
        color: #ffffff;
        text-decoration: none;

        &:first-child {
          margin-left: 130px;
        }
      }

      a.button-positive {
        background-color: #8DC543;
        margin-left: 10px;
        font-weight: 100;
        font-size: 1.2em;
      }

      a.button-positive:hover {
        transition: background-color 0.25s ease;
        background: #fff;
        color: #8DC543;
        box-shadow: 0 0 5px #8DC543;
      }

    }

    h3 {
      color: #8DC543;
      font-size: 28px;
      line-height: 32px;
      font-weight: 200;
      border-bottom: 0;
      padding-bottom: 0;
      margin: 50px 0 10px 0;
    }
  }

  p {
    color: #fff;
    font-size: 16px;
    line-height: 26px;
    padding-bottom: 20px;
    font-weight: bold;
  }

  p, a, h3 {
    position: relative;
    z-index: 10;
  }

  p ~ a {
    color: #ffffff;
    font-size: 14px;
    font-weight: normal;
    text-decoration: none;
  }

  p + a {
    padding-right: 8px;
    margin-right: 8px;
    border-right: 1px solid #ffffff;
  }

}
